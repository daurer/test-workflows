{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "bootstrap-sha": "a0b5d5d9f479408433e32eb355bf5b38987333fb",
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "graph-proxy",
      "component": [
        "graph-proxy-chart", 
        "graph-proxy-service"
      ]
    },
    {
      "type": "linked-versions",
      "groupName": "sessionspaces",
      "component": [
        "sessionspaces-chart", 
        "sessionspaces-service"
      ]
    },
    {
      "type": "linked-versions",
      "groupName": "dashboard",
      "component": [
        "dashboard-chart", 
        "dashboard-service"
      ]
    }
  ],
  "packages": {
    "charts/graph-proxy": {
      "release-type": "helm",
      "component": "graph-proxy-chart"
    },
    "backend/graph-proxy": {
      "release-type": "rust",
      "component": "graph-proxy-service",
      "extra-files": [
        {
          "type": "yaml",
          "path": "/charts/graph-proxy/Chart.yaml",
          "jsonpath": "$.appVersion"
        }
      ]       
    },
    "charts/sessionspaces": {
      "release-type": "helm",
      "component": "sessionspaces-chart"
    },
    "backend/sessionspaces": {
      "release-type": "rust",
      "component": "sessionspaces-service",
      "extra-files": [
        {
          "type": "yaml",
          "path": "/charts/sessionspaces/Chart.yaml",
          "jsonpath": "$.appVersion"
        }
      ] 
    },
    "charts/dashboard": {
      "release-type": "helm",
      "component": "dashboard-chart"
    },
    "frontend/dashboard": {
      "release-type": "node",
      "component": "dashboard-service",
      "extra-files": [
        {
          "type": "yaml",
          "path": "/charts/dashboard/Chart.yaml",
          "jsonpath": "$.appVersion"
        }
      ] 
    },
    "frontend/relay-workflows-lib": {
      "release-type": "node"
    },
    "frontend/workflows-lib": {
      "release-type": "node"
    },
    "backend/telemetry": {
      "release-type": "rust"
    }
  }
}
